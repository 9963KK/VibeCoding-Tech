{
  "version": 1,
  "plugins": [
    {
      "id": "serena",
      "name": "Serena",
      "category": "memory",
      "integration": { "type": "mcp" },
      "claude": {
        "mcpServerName": "serena",
        "mcpAliases": ["serena"],
        "mcpServer": {
          "command": "npx",
          "args": ["-y", "serena-slim"]
        }
      },
      "default_tier": "core"
    },
    {
      "id": "filesystem-mcp",
      "name": "Filesystem MCP",
      "category": "filesystem",
      "integration": { "type": "mcp" },
      "claude": {
        "mcpServerName": "filesystem",
        "mcpAliases": ["filesystem", "filesystem-mcp"],
        "mcpServer": {
          "command": "npx",
          "args": ["-y", "@modelcontextprotocol/server-filesystem", "{{project_root}}"]
        }
      },
      "default_tier": "core"
    },
    {
      "id": "github-mcp",
      "name": "GitHub MCP",
      "category": "git",
      "integration": { "type": "mcp" },
      "claude": {
        "mcpServerName": "github",
        "mcpAliases": ["github", "github-mcp"],
        "mcpServer": {
          "command": "npx",
          "args": ["-y", "@modelcontextprotocol/server-github"],
          "env": {
            "GITHUB_PERSONAL_ACCESS_TOKEN": "<YOUR_GITHUB_PERSONAL_ACCESS_TOKEN>"
          }
        }
      },
      "default_tier": "core"
    },
    {
      "id": "context7",
      "name": "Context7",
      "category": "docs",
      "integration": { "type": "mcp" },
      "claude": {
        "mcpServerName": "context7",
        "mcpAliases": ["context7", "context7-mcp"],
        "mcpServer": {
          "command": "npx",
          "args": ["-y", "@upstash/context7-mcp"]
        }
      },
      "default_tier": "core"
    },
    {
      "id": "agent-browser",
      "name": "Agent Browser",
      "category": "browser",
      "integration": { "type": "daemon+skill" },
      "default_tier": "core"
    },
    {
      "id": "playwright-mcp",
      "name": "Playwright MCP",
      "category": "browser",
      "integration": { "type": "mcp" },
      "default_tier": "project"
    }
  ]
}
